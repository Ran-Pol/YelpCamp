<% layout('layouts/boilerplate.ejs') %>


    <div class="row">
        <div class="col-8 offset-2">
            <div class="alert alert-danger " role="alert">
                <h4 class="alert-heading text-center">
                    <%=err.message%>
                </h4>
                <hr>
                <% if (process.env.NODE_ENV !=='production' ) {%>
                    <p class="mb-0 text-wrap">
                        <%= err.stack %>
                    </p>
                    <% } %>
            </div>
        </div>
    </div>