<% layout('layouts/boilerplate.ejs') %>
    <h1 class="">Create A New Camp Ground</h1>


    <form action="/campgrounds" method="post">
        <div class="">
            <label for="title" class="">Camp Name</label>
            <div class="">
                <input class="" type="text" name="title" placeholder="Enter canp's name" id="title">
            </div>
        </div>
        <div class="">
            <label for="price" class="">Price</label>
            <div class="">
                <input class="" placeholder="Enter price" type="number" name="price" id="price" min="0" step="0.01">
            </div>
        </div>

        <div class="">
            <label for="city" class="">City</label>
            <div class="">
                <input class="" type="text" name="city" placeholder="Enter city" id="city">
            </div>
        </div>

        <div class="">
            <label for="state" class="">State</label>
            <div class="">
                <div class="">
                    <select id="state" name="state">
                        <option>Select State</option>
                        <%for (const state in stateList) {%>
                            <option value="<%=stateList[state]%>">
                                <%=stateList[state]%>
                            </option>
                            <%} %>
                    </select>
                </div>
            </div>
        </div>

        <div class="">
            <label for="description" class="">Description</label>
            <div class="">
                <textarea name="description" id="description" class="" placeholder="Describe the camp..."></textarea>
            </div>
        </div>


        <div class="">
            <div class="">
                <button type="submit" class="">Submit</button>
            </div>
            <div class="">
                <button type="reset" class="">Reset</button>
            </div>
            <a class="" href="/campgrounds">Go Back</a>
        </div>
    </form>