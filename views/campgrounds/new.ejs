<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>New CampGround</title>
</head>

<body>
    <h1 class="title">Create A New Camp Ground</h1>


    <form action="/campgrounds" method="post">
        <div class="field">
            <label for="title" class="label">Camp Name</label>
            <div class="control">
                <input class="input" type="text" name="title" placeholder="Enter canp's name" id="title">
            </div>
        </div>
        <div class="field">
            <label for="price" class="label">Price</label>
            <div class="control">
                <input class="input" placeholder="Enter price" type="number" name="price" id="price" min="0"
                    step="0.01">
            </div>
        </div>

        <div class="field">
            <label for="city" class="label">City</label>
            <div class="control">
                <input class="input" type="text" name="city" placeholder="Enter city" id="city">
            </div>
        </div>

        <div class="field">
            <label for="state" class="label">State</label>
            <div class="control">
                <div class="select">
                    <select id="state" name="state">
                        <option>Select State</option>
                        <%for (const state in stateList) {%>
                            <option value="<%=stateList[state]%>">
                                <%=stateList[state]%>
                            </option>
                            <%} %>
                    </select>
                </div>
            </div>
        </div>

        <div class="field">
            <label for="description" class="label">Description</label>
            <div class="control">
                <textarea name="description" id="description" class="textarea"
                    placeholder="Describe the camp..."></textarea>
            </div>
        </div>


        <div class="field is-grouped ">
            <div class="control">
                <button type="submit" class="button is-link">Submit</button>
            </div>
            <div class="control">
                <button type="reset" class="button is-link is-light">Reset</button>
            </div>
            <a class="button" href="/campgrounds">Go Back</a>
        </div>
    </form>
</body>

</html>