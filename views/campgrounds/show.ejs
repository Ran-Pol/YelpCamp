<% layout('layouts/boilerplate.ejs') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src=" <%= camp.image %>" alt="" class="card-img-top">

                <div class="card-body">
                    <div class="row">
                        <h3 class="card-title col-6 ">
                            <%= camp.title %>
                        </h3>
                        <h4 class="card-title col-6 ">
                            $<%= camp.price %>/night

                        </h4>
                    </div>
                    <p class="card-text">
                        <small class="text-muted">
                            <%= camp.location %>
                        </small>
                    </p>
                    <p class="card-text">

                        <%= camp.description %>

                    </p>
                    <p class="card-text">
                        <a class="btn btn-primary" href=<%=`/campgrounds/${camp._id}/edit`%>
                            >edit</a>

                    </p>

                </div>

                <div class="card-footer">2 dyas ago</div>

            </div>
        </div>
    </div>