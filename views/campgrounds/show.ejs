<% layout('layouts/boilerplate.ejs') %>

    <div class="row">
        <div class="col-6">

            <!-- The Camground Card -->
            <div class="card mb-3">
                <img src=" <%= camp.image %>" alt="" class="card-img-top">

                <div class="card-body">
                    <div class="row">
                        <h3 class="card-title col-6 ">
                            <%= camp.title %>
                        </h3>
                        <h4 class="card-title col-6 ">
                            $<%= camp.price %>/night

                        </h4>
                    </div>
                    <p class="card-text">
                        <small class="text-muted">
                            <%= camp.location %>
                        </small>
                    </p>
                    <p class="card-text">
                        <small class="">Owner:
                            <%= camp.author.username %>
                        </small>
                    </p>
                    <p class="card-text">

                        <%= camp.description %>

                    </p>
                    <% if(currentUser && camp.author.equals(currentUser._id)) {%>
                        <div class="formBottomButton">
                            <a href=<%=`/campgrounds/${camp._id}/edit`%> class="btn btn-primary formButton ">Edit</a>

                            <form action=<%=`/campgrounds/${camp._id}?_method=delete`%> method="post">
                                <button type="submit" class="btn btn-danger formButton ">Delete</button>
                            </form>
                        </div>
                        <% } %>

                </div>

                <div class="card-footer">2 days ago</div>
            </div>
        </div>
        <!-- Form To Leave a Comment -->
        <div class="col-6">
            <% if (currentUser) {%>
                <form action='/campgrounds/<%=camp._id%>/reviews' class="mb-3 validated-form" method="POST" novalidate>
                    <h2 class="title">Leave a Review</h2>
                    <div class="mb-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" class="form-range" min="0" max="5" name="review[rating]" id="rating"
                            required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="body">Review</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-success">
                            Add Review
                        </button>
                    </div>
                </form>
                <% } else{%>
                    <h2>Camp Reviews:</h2>
                    <% } %>
                        <!-- Review List -->
                        <%for(let review of camp.reviews) {%>

                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        Rating: <%=review.rating%>
                                    </h5>

                                    <p class="card-text">
                                        <%=review.body%>
                                    </p>
                                    <!-- Post's username  -->
                                    <h6 class="card-subtitle text-muted">
                                        -<%=review.author.username%>
                                    </h6>

                                </div>
                                <% if(currentUser && review.author.equals(currentUser._id)) {%>

                                    <form action=<%=`/campgrounds/${camp._id}/reviews/${review._id}?_method=delete`%>
                                        method="post">
                                        <button type="submit" class="btn btn-sm btn-danger formButton ">Delete</button>
                                    </form>
                                    <% } %>
                            </div>
                            <%}%>
        </div>
    </div>